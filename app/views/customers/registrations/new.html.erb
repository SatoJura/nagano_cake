<div class="container">
  <span class="row my-3">
    <h4>新規登録画面</h4>
  </span>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_cutomer', class: 'new_customer', local: true  do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <label class="col-md-3">名前</label>
    <div class="col-md-1 text-right">
      <%= f.label :last_name, "(姓)" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "令和" %>
    </div>
    <div class="col-md-1 text-right">
      <%= f.label :first_name, "(名)" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "道子" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-md-3">フリガナ</label>
    <div class="col-md-1 pr-0 text-right">
      <%= f.label :last_name_kana, "(セイ)" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :last_name_kana, autofocus: true, class: "form-control", placeholder: "レイワ" %>
    </div>
    <div class="col-md-1 pr-0 text-right">
      <%= f.label :first_name_kana, "(メイ)" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :first_name_kana, autofocus: true, class: "form-control", placeholder: "ミチコ" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="col-md-3 offset-md-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    </div>
    <div class="col-md-3 offset-md-1">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "true", class: "form-control", placeholder: "0000000" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :address, "住所" %>
    </div>
    <div class="col-md-7 offset-md-1">
      <%= f.text_field :address, autofocus: true, autocomplete: "true", class: "form-control", placeholder: "神奈川県横浜市みなとみらい0-0" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
    </div>
    <div class="col-md-3 offset-md-1">
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "true", class: "form-control", placeholder: "07012345678" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
    </div>
    <div class="col-md-3 offset-md-1">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :password_confirmation, "パスワード(確認用)" %>
    </div>
    <div class="col-md-3 offset-md-1">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="actions row">
    <div class="offset-md-4 col-md-3">
    <%= f.submit "新規登録", class:"btn btn-md btn-success btn-block" %>
    </div>
  </div>
<% end %>

<span class="row my-3">
  <h4>既に登録済みの方</h4>
</span>

<p><%= render "customers/shared/links" %>　からログインしてください。</p>
</div>