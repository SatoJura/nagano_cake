<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto mb-3 d-flex">
      <h4>商品一覧</h4>
      <%= link_to new_admin_item_path, class: "text-dark fa-2x fa-pull-right ml-auto" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td class="text-success font-weight-bold"><%= item.is_active ? '販売' : '販売停止中' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>