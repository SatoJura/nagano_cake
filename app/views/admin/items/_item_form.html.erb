  <div class="row mb-3 form-group">
    <div class="col-md-4">
      <%= f.label(:image, "商品画像") %>
    </div>
    <div class="col-md-8">
      <%= f.attachment_field :image, class:"form-control-file" %>
    </div>
  </div>
  <div class="row mb-3 form-group">
    <div class="col-md-4">
      <%= f.label(:name, "商品名") %>
    </div>
    <div class="col-md-8">
      <%= f.text_field :name, class:"form-control", placeholder:"商品名" %>
    </div>
  </div>
  <div class="row mb-3 form-group">
    <div class="col-md-4">
      <%= f.label(:introduction, "商品説明") %>
    </div>
    <div class="col-md-8">
      <%= f.text_area :introduction, rows:"6", class:"form-control", placeholder:"ここに説明文を記述します" %>
    </div>
  </div>
  <div class="row mb-3 form-select">
    <div class="col-md-4">
      <%= f.label(:genre_id, "ジャンル") %>
    </div>
    <div class="col-md-8 ">
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank:"--選択してください--" %>
    </div>
  </div>
  <div class="row mb-3 form-group">
    <div class="col-md-4">
      <%= f.label(:price, "税抜価格") %>
    </div>
    <div class="col-md-8 d-flex flex-row">
      <%= f.text_field :price, class:"form-control", placeholder:"1000" %><span>円</span>
    </div>
  </div>
  <div class="row mb-3 form-group">
    <div class="col-md-4">
      <%= f.label(:is_active, "販売ステータス") %>
    </div>
    <div class="col-md-8">
      <div class="radio-inline">
        <%= f.radio_button :is_active, "販売中" %>
        <%= f.label :is_active, "販売中", class: "mr-3" %>

        <%= f.radio_button :is_active, "販売停止中" %>
        <%= f.label :is_active, "販売停止中" %>
      </div>
    </div>
  </div>
  <% if local_assigns[:edit_flag].present? %>
    <div class="form-group">
      <div class="col-md-offset-4 col-md-8">
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      </div>
    </div>
  <% else %>
    <div class="form-group">
      <div class="col-md-offset-4 col-md-8">
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
    </div>
  <% end %>