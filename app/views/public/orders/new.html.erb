<div class="container">
  <div class="row mb-3">
    <h4>注文情報入力</h4>
  </div>

  <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
    <h4>支払方法</h4>
    <div class="row">
      <div class="col-md-10">
        <div class="form-check">
          <%= f.collection_radio_buttons :payment_method, Order.payment_methods_i18n, :first , :last %>
        </div>
      </div>
    </div>

    <h4 class="mt-2">お届け先</h4>
    <div class="row">
      <div class="col-md-10">
        <%= f.radio_button :address, current_customer.address %>
        <%= f.label :address, "ご自身の住所" %>
        <div>
        <%= current_customer.full_address %>
        <%= current_customer.full_name %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-10">
        <%= f.radio_button :address, current_customer.addresses %>
        <%= f.label :address, "登録済住所から選択" %>
          <%= f.collection_select :select_address, current_customer.addresses, :id, :full_address %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-10">
      <%= f.radio_button :address, current_customer.addresses %>
      <%= f.label :address, "新しいお届け先" %>

        <%= render :partial => "public/addresses/new_address", :locals => {:f => f} %>

      </div>
    </div>
    <div class="row d-flex justify-content-center mx-auto">
      <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
