<div class="container">
  <div class="row mb-3">
    <h4>注文履歴詳細</h4>
  </div>
  <div class="row">
    <div class="col-md-9">
      <p><strong>注文情報</strong></p>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-secondary">注文日</th>
            <td><%= l @order.created_at %></td>
          </tr>
          <tr>
            <th class="table-secondary">配送先</th>
            <td>
              〒<%= @order.postal_code %></br>
              <%= @order.address %></br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th class="table-secondary">支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th class="table-secondary">ステータス</th>
            <td><%= @order.order_status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-3">
      <p><strong>請求情報</strong></p>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-secondary">商品合計</th>
            <td><%= @sum.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="table-secondary">配送料</th>
            <td><%= @order.delivery_fee %></td>
          </tr>
          <tr>
            <th class="table-secondary">ご請求額</th>
            <td><%= @order.total_payment.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-11">
      <p><strong>注文内容</strong></p>
      <table class="table table-bordered">
        <thead class="table-secondary">
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail|%>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price * order_detail.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>