<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <%= form_with model:@item, url:admin_items_path, local:true do |f| %>
        <div class="row form-group">
          <%= f.label(:image, "商品画像") %>
          <div class="col">
            <%= f.attachment_field :image, class:"form-control-file" %>
          </div>
        </div>
        <div class="row form-group">
          <%= f.label(:name, "商品名") %>
          <div class="col">
            <%= f.text_field :name, class:"form-control", placeholder:"商品名" %>
          </div>
        </div>
        <div class="row form-group">
          <%= f.label(:introduction, "商品説明") %>
          <div class="col">
            <%= f.text_area :introduction, rows:"6", class:"form-control", placeholder:"ここに説明文を記述します" %>
          </div>
        </div>
        <!--ジャンルの選択肢　未-->
        <div>
          <div class="row form-group">
          <%= f.label(:genre_id, "ジャンル") %>
          <%= f.select :genre_id,[],include_blank:"--選択してください" %>
        </div>
        <!--円　が横並びにならない-->
        <div class="row form-group">
          <%= f.label(:price, "税抜価格") %>
          <div class="col">
            <%= f.text_field :price, class:"form-control", placeholder:"1000" %>円
          </div>
        </div>
        <!--販売ステータス　ラジオボックス？　未-->
        <div class="row">
          <%= f.label(:is_active, "販売ステータス") %>
          <div class="col form-check">
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "販売中", value: true %>
          </div>
          <div class="col form-check">
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "販売停止中", value: false %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>