<div class="container">
  <div class="row">
    <%= render "public/items/genre_find", genre: @genre %>

    <div class="col-md-4">
      <%= attachment_image_tag @item, :image, size:"300x200", format: 'jpeg', fallback: "no_image_clock.jpg" %>
    </div>
    <div class="col-md-5">
      <h3><%= @item.name %></h3>
      <p class="h-50"><%= @item.introduction %></p>
      <h5>¥<%= @item.add_tax_price.to_s(:delimited) %>（税込）</h5>

      <div class="form-group">
      <%= form_with model:@cart_item, url: cart_items_path, method: :post, local:true do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <div class="col-md-4 btn-group">
          <%= f.select :amount, * [1..10], { include_blank: "個数選択" }, class:"form-control" %>
        </div>
        <div class="col-md-5 btn-group">
          <%= f.submit "カートに入れる", class:"btn btn-success px-2" %>
        </div>
      <% end %>
      </div>

    </div>
  </div>
</div>
