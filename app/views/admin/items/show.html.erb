<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= attachment_image_tag @item, :image, size:"300x200", format: 'jpeg', fallback: "no_image_clock.jpg" %>
    </div>

    <div class="col-md-7">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="col-md-4">商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格</br>（税抜価格）</td>
            <td class="align-middle"><%= @item.price.to_s(:delimited) %>(<%= @item.add_tax_price.to_s(:delimited) %>)<span>円</span></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td class="text-success font-weight-bold"><%= @item.is_active %></td>
          </tr>
        </tbody>
      </table>
      <div class="offset-md-4">
        <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-lg btn-success px-4" %>
      </div>
    </div>
  </div>
</div>