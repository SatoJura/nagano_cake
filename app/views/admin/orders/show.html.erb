<div class="container">
  <div class="row mb-3">
    <h4>注文履歴詳細</h4>
  </div>
  <div class="row mb-3">
    <div class="col-md-10">
      <table>
        <tbody>
          <tr>
            <th>購入者</th>
            <td><%= link_to @order.customer.full_name, admin_customer_path(@order.customer_id) %></td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= l @order.created_at %></td>
          </tr>
          <tr>
            <th class="d-flex align-items-start">配送先</th>
            <td>
              〒<%= @order.postal_code %>
              <%= @order.address %></br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <td><%#= collection_select :order_status ,Order.all, :id, :order_status %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-borderless">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price * order_detail.amount %></td>
            <td></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4 d-flex align-items-end">
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @sum.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.delivery_fee %>円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @order.total_payment.to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>