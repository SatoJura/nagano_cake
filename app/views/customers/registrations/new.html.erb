<h2>Sign up</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_cutomer', class: 'new_customer', local: true  do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  
    <div class="field">
    <div>
      <%= f.label(:full_name, "名前") %>
    </div>
    <div>
      <%= f.label :last_name, "(姓)" %>
      <%= f.text_field :last_name, autofocus: true %>
    </div>
    <div>
      <%= f.label :first_name, "(名)" %>
      <%= f.text_field :first_name, autofocus: true %>
    </div>
  </div>

  <div class="field">
    <div>
      <%= f.label(:full_name_kana, "フリガナ") %>
    </div>
    <div>
      <%= f.label :last_name_kana, "(セイ)" %>
      <%= f.text_field :last_name_kana, autofocus: true %>
    </div>
    <div>
      <%= f.label :first_name_kana, "(メイ)" %>
      <%= f.text_field :first_name_kana, autofocus: true %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-sm btn-success" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
