<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h6>ジャンル名</h6>
      <%= form_with model:@genre,url:admin_genres_path, local:true do |f| %>
        <%= f.text_field :name, class:"form_control", placeholder:"ジャンル名"%>
        <%= f.submit "新規登録", class:"btn btn-sm btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-sm btn-success" %>
            </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
