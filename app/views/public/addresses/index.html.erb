<div class="container">
  <div class="row mb-3">
    <h4>配送先登録/一覧</h4>
  </div>

<%= form_with model: @address, url: addresses_path, method: :post, local: true do |f| %>
  <div class="row">
    <div class="col-md-10">
      <%= render :partial => "public/addresses/new_address", :locals => {:f => f} %>
    </div>
  </div>
  <div class="row d-flex justify-content-end mx-auto">
    <%= f.submit "新規登録", class:"btn btn-success"%>
  </div>
<% end %>

  <div class="row mt-5">
    <table class="table table-bordered col-md-10">
      <thead class="thead-light">
        <tr>
          <th class="col-md-2">郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |addresses| %>
        <tr>
          <td><%= addresses.postal_code %></td>
          <td><%= addresses.address %></td>
          <td><%= addresses.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(addresses.id), class: "btn btn-success" %>
            <%= link_to "削除する", address_path(addresses.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>