<div class="container">
  <!--エラー文-->
  <%= render "admin/customers/error_msg", customer: @customer %>

  <span class="row my-3">
    <h4>会員情報編集</h4>
  </span>
  <%= form_with model: @customer, url: customers_path, local: true  do |f| %>
  <div class="form-group row">
    <label class="col-md-3">氏名</label>
    <div class="col-md-3 offset-md-1">
      <%= f.text_field :last_name, autofocus: true, class: "form-control"%>
    </div>
    <div class="col-md-3">
      <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-md-3">フリガナ</label>
    <div class="col-md-3 offset-md-1">
      <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :postal_code, "郵便番号" %>
    </div>
    <div class="col-md-3 offset-md-1">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "true", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :address, "住所" %>
    </div>
    <div class="col-md-7 offset-md-1">
      <%= f.text_field :address, autofocus: true, autocomplete: "true", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :telephone_number, "電話番号" %>
    </div>
    <div class="col-md-3 offset-md-1">
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "true", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="col-md-3 offset-md-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="actions row">
    <div class="offset-md-4 col-md-6 d-flex">
      <div class="col-md-5">
        <%= f.submit "編集内容を保存", class:"btn btn-md btn-success btn-block" %>
      </div>
      <div class="col-md-3 offset-md-3">
        <%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-danger" %>
      </div>
    </div>
  </div>
<% end %>
</div>