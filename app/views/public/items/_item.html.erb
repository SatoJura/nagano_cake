<% items.each do |item| %>
  <table class="mr-3">
    <tbody>
      <tr>
        <td>
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item,:image, size:"220x150", format: "jpeg", fallback: "no_image_clock.jpeg" %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td><%= item.name %></td>
      </tr>
      <tr>
        <td>¥<%= item.add_tax_price.to_s(:delimited) %>（税込）</td>
      </tr>
    </tbody>
  </table>
<% end %>