<div class="container">
  <div class="row">
    <div class=" mx-auto">
      <%= form_with model:@item, url:admin_items_path, local:true do |f| %>
        <div class="row mb-3 form-group">
          <div class="col-md-4">
            <%= f.label(:image, "商品画像") %>
          </div>
          <div class="col-md-8">
            <%= f.attachment_field :image, class:"form-control-file" %>
          </div>
        </div>
        <div class="row mb-3 form-group">
          <div class="col-md-4">
            <%= f.label(:name, "商品名") %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :name, class:"form-control", placeholder:"商品名" %>
          </div>
        </div>
        <div class="row mb-3 form-group">
          <div class="col-md-4">
            <%= f.label(:introduction, "商品説明") %>
          </div>
          <div class="col-md-8">
            <%= f.text_area :introduction, rows:"6", class:"form-control", placeholder:"ここに説明文を記述します" %>
          </div>
        </div>
        <!--ジャンルの選択肢・幅　未-->
        <div class="row mb-3 form-select">
          <div class="col-md-4">
            <%= f.label(:genre_id, "ジャンル") %>
          </div>
          <div class="col-md-8">
            <%= f.select :genre_id,[],include_blank:"--選択してください--" %>
          </div>
        </div>
        <div class="row mb-3 form-group">
          <div class="col-md-4">
            <%= f.label(:price, "税抜価格") %>
          </div>
          <div class="col-md-8 d-flex flex-row">
            <%= f.text_field :price, class:"form-control", placeholder:"1000" %><span>円</span>
          </div>
        </div>
        <div class="row mb-3 form-group">
          <div class="col-md-4">
            <%= f.label(:is_active, "販売ステータス") %>
          </div>
          <div class="col-md-8">
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "販売中", value: true %>
            </div>
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "販売停止中", value: false %>
            </div>
          </div>
        </div>
        submitボタンの位置もっと右にしたい
        <div class="form-group">
          <div class="col-md-offset-4 col-md-8">
            <%= f.submit "新規登録", class:"btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>