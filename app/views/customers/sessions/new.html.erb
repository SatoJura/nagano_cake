<div class="container">
  <span class="row my-3">
    <h4>ログイン</h4>
  </span>
  <p>会員の方はこちらからログイン</p>

<%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="col-md-3">
      <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :password, "パスワード" %>
    </div>
    <div class="col-md-3">
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions row">
    <div class="offset-md-3 col-md-3">
      <%= f.submit "ログイン", class: "btn btn-md btn-success" %>
    </div>
  </div>
<% end %>

<p>会員登録がお済みではない方</p>
<%= render "customers/shared/links" %>

</div>