<div class="container">
  <div class="row">
    <%= render "public/items/genre_find", genre: @genre %>
    
    <div class="col-md-8">
      <span class="d-flex align-items-end">
        <h3><strong>商品一覧</strong></h3>
        <p class="h5 ">（全<%= @total %>件）</p>
      </span>
      <div class="d-flex flex-wrap">
        <%= render "public/items/item", items: @items %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
    
  </div>
</div>