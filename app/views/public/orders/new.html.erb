<div class="container">
    <%= form_with model: @order, local: true do |f| %>
      <h4>支払方法</h4>
      <div class="row">
        <div class="col-md-8">
          <div class="form-check">
            <%= f.collection_radio_buttons :payment_method, Order.payment_methods_i18n, :first , :last %>
          </div>
        </div>
      </div>

      <h4>お届け先</h4>
      <div class="row form-group">
        <div class="col-md-3">
          <%= f.label(:postal_code, :"郵便番号(ハイフンなし)")%>
        </div>
        <div class="col-md-9">
          <%= f.text_field :postal_code, class: "form_control", placeholder: "0000000" %>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-md-3">
          <%= f.label(:address, :"住所")%>
        </div>
        <div class="col-md-9">
          <%= f.text_field :address, class: "form_control", size: 40,  placeholder: "神奈川県横浜市みなとみらい0-0" %>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-md-3">
          <%= f.label(:name, :"宛名")%>
        </div>
        <div class="col-md-9">
          <%= f.text_field :name, class: "form_control", placeholder: "令和道子" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
          <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
        </div>
      </div>
    <% end %>
</div>
