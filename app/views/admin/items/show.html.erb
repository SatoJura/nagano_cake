<!--ページ表示されない まだ新規投稿できてないから？-->

<div class="container">
  <div class="row">
    <% @item.each do |item| %>
      <div class="col-md-4">
        <%= attachment_image_tag @item, :image, size:"100x60", format: 'jpeg', fallback: "no_image_clock.jpg" %>
      </div>

      <div class="col-md-7 offset-md-1">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= item.name %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= item.genre %></td>
            </tr>
            <!--税込・税抜き部分考える-->
            <tr>
              <td>税込価格（税抜価格）</td>
              <td><%= item.price %><span>円</span></td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td><%= item.is_active %></td>
            </tr>
          </tbody>
        </table>
        <!--編集ボタン作成-->
        
      </div>
    <% end %>
  </div>
</div>