<div class="container">
  <span class="row my-3">
    <h4>ログイン</h4>
  </span>
  <h5>会員の方はこちらからログイン</h5>

<%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="col-md-3">
      <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :password, "パスワード" %>
    </div>
    <div class="col-md-3">
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
    </div>
  </div>

  <div class="actions row">
    <div class="offset-md-3 col-md-3">
      <%= f.submit "ログイン", class: "btn btn-md btn-success" %>
    </div>
  </div>
<% end %>

  <span class="row my-3">
    <h5>会員登録がお済みではない方</h5>
  </span>
  
  <p><%= render "customers/shared/links" %>　から会員登録をしてください。</p>
</div>