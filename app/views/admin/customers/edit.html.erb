<div class="container">
  <%= form_with model: @customer, url: admin_customer_path, local: true  do |f| %>
    <div class="form-group row">
      <label class="col-md-3">会員ID</label>
      <div class="col-md-3">
        <%= @customer.id %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-md-3">氏名</label>
      <div class="col-md-3">
        <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-md-3">フリガナ</label>
      <div class="col-md-3">
        <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "true", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3">
        <%= f.label :address, "住所" %>
      </div>
      <div class="col-md-7">
        <%= f.text_field :address, autofocus: true, autocomplete: "true", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3">
        <%= f.label :telephone_number, "電話番号" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "true", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-md-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="mb-3 form-group row">
      <div class="col-md-3">
        <%= f.label(:is_active, "会員ステータス") %>
      </div>
      <div class="col-md-8">
        <div class="radio-inline">
          <%= f.radio_button :is_active, "有効", id: "customer_is_active_有効" %>
          <%= f.label :is_active_有効, "有効", class: "mr-3" %>

          <%= f.radio_button :is_active, "退会", id: "customer_is_active_退会" %>
          <%= f.label :is_active_退会, "退会" %>
        </div>
      </div>
    </div>

    <div class="actions row">
      <div class="col-md-3 offset-md-3">
        <%= f.submit "変更を保存", class:"btn btn-lg btn-success px-4" %>
      </div>
    </div>
  <% end %>
</div>