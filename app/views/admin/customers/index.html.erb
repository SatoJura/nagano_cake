<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th><span>氏名</span></th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
            <td><%= customer.email %></td>
            <td class="text-success font-weight-bold"><%= customer.is_active %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
