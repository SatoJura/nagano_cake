<div class="container">
  <span class="row my-3">
    <h4></h4>
  </span>

<%= form_with model: @customer, url: admin_customer_path, local: true  do |f| %>
    <div class="form-group row">
      <label class="col-md-3">名前</label>
    <div class="col-md-1 text-right">
      <%= f.label :last_name, "(姓)" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
    </div>
    <div class="col-md-1 text-right">
      <%= f.label :first_name, "(名)" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-md-3">フリガナ</label>
    <div class="col-md-1 pr-0 text-right">
      <%= f.label :last_name_kana, "(セイ)" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
    </div>
    <div class="col-md-1 pr-0 text-right">
      <%= f.label :first_name_kana, "(メイ)" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :email %>
    </div>
    <div class="col-md-3 offset-md-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    </div>
    <div class="col-md-3 offset-md-1">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "true", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :address, "住所" %>
    </div>
    <div class="col-md-7 offset-md-1">
      <%= f.text_field :address, autofocus: true, autocomplete: "true", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
    </div>
    <div class="col-md-3 offset-md-1">
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "true", class: "form-control" %>
    </div>
  </div>



  <div class="actions row">
    <div class="offset-md-4 col-md-3">
    <%= f.submit "変更を保存", class:"btn btn-md btn-success btn-block" %>
    </div>
  </div>
<% end %>

</div>