<div class="container">
  <div class="row">
    
  </div>
  <div class="row">
    <%= form_with model: @order, local: true do |f| %>
      <div>
        <h4>支払方法</h4>
        <%= f.hidden_field :payment_method %>
      </div>
      <div>
        <h4>お届け先</h4>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :name %>
      </div>
      <div class="form-group">
        <%= f.submit "注文を確定する", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>