      <% if item.errors.any? %>
        <div id="error_explanation">
          <h3>入力必須項目が<%= pluralize(item.errors.count, "件") %> あります</h3>
          <ul>
            <% item.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>